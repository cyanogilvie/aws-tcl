#!/usr/bin/env tclsh

set res	""
append res "| Package | Version | Source |" \n
append res "| --- | --- | --- |" \n
foreach p {
	Tcl
	Thread
	tdbc
	pgwire
	tdom
	{tls tcltls_source}
	parse_args
	rl_json
	hash
	unix_sockets
	{tcllib tcllib_source 1.20}
	gc_class
	rl_http
	sqlite3
	tcc4tcl
	cflib
	sop
	netdgram
	evlog
	dsl
	logging
	sockopt
	crypto
	m2
	{aws https://github.com/cyanogilvie/aws-tcl}
	{aws::s3 https://github.com/cyanogilvie/aws-tcl}
	{aws::cognito_identity https://github.com/cyanogilvie/aws-tcl}
	{aws::secretsmanager https://github.com/cyanogilvie/aws-tcl}
	{aws::ecr https://github.com/cyanogilvie/aws-tcl}
	{urlencode https://github.com/cyanogilvie/aws-tcl}
	{hmac https://github.com/cyanogilvie/aws-tcl}
	tclreadline
	Expect
	tclsignal
	type
	inotify
	Pixel
	{Pixel_jpeg pixel_source}
	{Pixel_png pixel_source}
	{Pixel_svg_cairo pixel_source}
	{Pixel_webp pixel_source}
	{Pixel_imlib2 pixel_source}
	chantricks
	openapi
	docker
} {
	lassign $p package source ver
	if {$source eq ""} {set source [string tolower $package]_source}
	if {$ver eq ""}    {set ver [package require $package]}
	if {[info exists ::env($source)]} {
		set source	$::env($source)
	}
	append res "| $package | $ver | $source |" \n
}

puts $res

